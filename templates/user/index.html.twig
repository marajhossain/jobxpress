{% extends 'admin.html.twig' %}

{% block title %}Job Express::User{% endblock %}

{% block body %}
    <div class="col-lg-12">
        <h1 class="page-header">
            User List
            <a href="{{ path('user_new') }}" class="btn btn-default btn-warning pull-right "> <i class="fa fa-plus"></i> Create new</a>
        </h1>

    </div>

    <table class="table table-hover table-bordered">
        <thead class="bg-success">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>***</td>
                <td>
                    {# <a href="{{ path('user_show', {'id': user.id}) }}" class="text-info"> <i class="fa fa-eye"></i> show</a> | #}
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="text-warning"> <i class="fa fa-edit"></i> edit</a> 
                    {# {% if is_granted('ROLE_ADMIN') %}
                       | <a href="{{ path('user_edit', {'id': user.id}) }}" class="text-danger"> <i class="fa fa-trash"></i> delete</a>
                    {% endif %} #}
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>

        {% endfor %}

        </tbody>
    </table>
{% endblock %}
