{% extends 'admin/layout.html.twig' %}

{% block title %} User List {% endblock %}
{% block pagename %} User List {% endblock %}

{% block breadcrumb %} 
	<li class="breadcrumb-item"><a href="{{ path('admin_index') }}">Dashboard</a></li>
	<li class="breadcrumb-item active"> User </li>
{% endblock %}

{% block content %} 
	<div class="content-body">
        <section id="pagination">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a class="text-white" href="{{ path('user_new') }}">
                                <button type="button" class="btn btn-round btn-sm btn-primary">
                                    <i class="ft-plus text-white">
                                    </i> Create New
                                </button>
                            </a>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="collapse"><i class="btn-outline-warning ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="btn-outline-primary ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="btn-outline-success ft-maximize"></i></a></li>
                                    <li><a data-action="close"><i class="btn-outline-danger ft-x"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body card-dashboard text-center">
                                <div class="table-responsive">
                                    <table class="table display nowrap table-striped table-bordered alt-pagination"
                                           id="patient-table">
										<thead>
											<tr>
												<th>Sl. No.</th>
												<th>Name</th>
												<th>Email</th>
												<th>Password</th>
												<th>Photo</th>
												<th>User Type</th>
												<th>Status</th>
												<th>Action</th>
											</tr>
										</thead>
										<tbody>
										{% for user in users %}
											<tr>
												<td>{{ user.id }}</td>
												<td>{{ user.name }}</td>
												<td>{{ user.email }}</td>
												<td>{{ '****' }}</td>
												<td>{{ '' }}</td>
												<td>
													{% if (user.type == 0) %}
														Admin
													{% elseif (user.type == 1) %}
														Job poster
													{% else %}
														User
													{% endif %}
												</td> 
												<td>
													{% if (user.status == 1) %}
														Active
													{% else %}
														Inactive
													{% endif %}
												</td>
												<td>
													<a href="{{ path('user_edit', {'id': user.id}) }}" class="warning edit mr-1"><i class="la la-pencil"></i> </a> 
													<a href="{{ path('user_show', {'id': user.id}) }}" class="success view mr-1"><i class="la la-folder-open"></i> </a> 
													{# <div class="form-group">
														<div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
															<a href="{{ path('user_show', {'id': user.id}) }}" type="button" class="btn btn-primary">Show</a>
															<a href="{{ path('user_edit', {'id': user.id}) }}" type="button" class="btn btn-warning">Edit</a>
														</div>
													</div> #}
												</td>
											</tr>
										{% else %}
											<tr>
												<td colspan="14">No records found</td>
											</tr>
										{% endfor %}
										</tbody>
									</table>
								</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>    
{% endblock %}

{% block javascripts %}
	{{  parent()  }}
{% endblock %}
