{% extends 'admin.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="col-lg-12">
        <h1 class="page-header">Category View</h1>
    </div>
    
    <div class="col-lg-12">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ getStatus[category.status] }}</td>
                </tr>

            </tbody>

        </table>

    </div>

    <a href="{{ path('category_index') }}" class="text-danger"> <i class="fa fa-arrow-left"></i> back to list</a>    

{% endblock %}
