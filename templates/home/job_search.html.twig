{% extends 'base.html.twig' %}

{% block title %}Job Search{% endblock %}

{% block body %}

<div class="col-md-12">
    <div class="example-wrapper">
        <p> Search Keyword <strong> {{ search_keyword }} </strong> </p>
        {% if jobs|length > 0 %}
            <table class="table table-hover table-bordered">
                <thead>
                    <tr class="text-white bg-dark">
                        <th colspan="4"> {{ jobs[0].category.name }} </th>
                    </tr>
                    <tr class="text-white bg-secondary">
                        <th>Location</th>
                        <th>Position</th>
                        <th>Company</th>
                        <th>View</th>
                    </tr>
                </thead>
                <tbody>
                {% for job in jobs %}
                    <tr>
                        <td>{{ job.location }}</td>
                        <td>{{ job.position }}</td>
                        <td>{{ job.companyName }}</td>
                        <td><a href="{{ path('job_details', {'id': job.id}) }}"> <i class="fa fa-eye"></i> </a></td>
                    <tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
        <p class='alert alert-info text-center'>No job yet. </p>
        {% endif %}
    </div>
</div>

{% endblock %}
