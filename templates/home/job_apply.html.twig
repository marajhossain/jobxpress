{% extends 'base.html.twig' %}

{% block title %}Apply Job{% endblock %}

{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">Apply for {{ jobDetails.position }}, <small> {{ jobDetails.location }}</h1>
    </div>

    {{ form_start(form, {'method': 'POST', 'action': path("job_apply"), 'class': "form-control" }) }}
        <div class="row">
            <div class="col-md-6">
                <input type="hidden" name="id" value={{ jobDetails.id }} required="required" />
                {# <input type="hidden" name="job_apply[job]" value={{ jobDetails.id }} required="required" /> #}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-success pull-right">Apply</button>
            </div>
        </div>
        
    {{ form_end(form) }}

    <a href="{{ path('job_details', {'id': jobDetails.id}) }}" class="text-danger"> <i class="fa fa-arrow-left"></i> back to list</a>

{% endblock %}