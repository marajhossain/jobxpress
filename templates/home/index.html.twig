{% extends 'base.html.twig' %}

{% block title %}Job Xpress{% endblock %}

{% block body %}

{% include '/home/job_search_bar.html.twig' %}


<div class="col-md-12">
    {% for category in categories %}
        <table class="table table-hover table-bordered">
            <thead>
                <tr class="text-white bg-dark">
                    <th colspan="3"> {{ category.name }} ( {{ category.jobPosts|length }} ) <a href="#" class="pull-right"><i class="fa fa-rss-square text-default" aria-hidden="true"></i></a></th>
                </tr>
                <tr class="text-white bg-secondary">
                    <th>Location</th>
                    <th>Position</th>
                    <th>Company</th>
                </tr>
            </thead>
            <tbody>
            {% for job in category.jobPosts %}
                <tr>
                    <td>{{ job.location }}</td>
                    <td>{{ job.position }}</td>
                    <td>{{ job.companyName }}</td>
                <tr>
            {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-right"> <a href="{{ path('jobs', {'id': category.id}) }}">more ... </a></th>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <h6>There are no data.</h6>
    {% endfor %}
</div>

{% endblock %}
